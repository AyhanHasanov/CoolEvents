@model CoolEvents.ViewModels.Home.RegisterVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Register";
}
<style>
    body {
        font-family: sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
    }

        .login-container > form {
            box-shadow: 0px 0px 20px 11px #e3e3e3;
            padding: 2vw;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
        }

        .login-container form .field {
            padding: 10px;
            border: 3px solid rgb(0, 0, 0, 0.15);
            border-radius: 4px;
        }

    .field-validation {
        color: red;
        font-size: small;
        font-weight: 700;
        margin-top: 3px;
    }

    .login-container .login-field {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 30vw;
        margin-top: 2vh;
    }

    .login-container form > input{
        margin-top: 2vh;
    }

    form .submit-bttn {
        height: 6vh;
        background: #ff3800;
        border: 3px solid rgb(0, 0, 0, 0.08);
        border-radius: 5px;
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

</style>

<div class="login-container">
    <form action="/Home/Register" method="post">
        
    <h3>REGISTER: </h3>
        <div class="login-field">
            <input asp-for="Username" class="field" placeholder="Username">
            <span class="field-validation" asp-validation-for="Username"></span>
        </div>
        <div class="login-field">
            <input asp-for="FirstName" class="field" placeholder="First Name">
            <span class="field-validation" asp-validation-for="FirstName"></span>
        </div>
        <div class="login-field">
            <input asp-for="LastName" class="field" placeholder="Last Name">
            <span class="field-validation" asp-validation-for="LastName"></span>
        </div>
        <div class="login-field">
            <input asp-for="Password" type="password" class="field" placeholder="Password">
            <span class="field-validation" asp-validation-for="Password"></span>
        </div>
        <input type="submit" class="submit-bttn" value="Save" />
    </form>
</div>